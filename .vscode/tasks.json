{
    "tasks": [
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build/Debug"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Compile Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake Build Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Executable Debug",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/seePlusPlus",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "CMake Compile"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}